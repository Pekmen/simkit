{
  "name": "simkit",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postinstall": "husky",
    "lint:fix": "eslint --fix .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
