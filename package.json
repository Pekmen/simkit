{
  "name": "@simkit/core",
  "version": "1.0.0",
  "description": "A lightweight, type-safe Entity-Component-System (ECS) library for TypeScript",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ecs",
    "entity-component-system",
    "typescript",
    "game-development",
    "simulation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pekmen/simkit-ecs.git"
  },
  "bugs": {
    "url": "https://github.com/Pekmen/simkit-ecs/issues"
  },
  "homepage": "https://github.com/Pekmen/simkit-ecs#readme",
  "author": "Milan Pekovic",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postinstall": "husky",
    "lint:fix": "eslint --fix .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.{js, jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
